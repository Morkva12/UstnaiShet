<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background">

    <!-- Верхняя панель -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/settingsToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:title="Настройки"
        android:titleTextColor="@color/white"
        android:backgroundTint="@color/dark_gray" />

    <!-- Прокручиваемая область для настроек -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Карточка для выбора операций -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/dark_gray"
                android:padding="16dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Операции"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginBottom="8dp"/>

                    <CheckBox
                        android:id="@+id/plusCheck"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+ (Сложение)"
                        android:textColor="@color/white"/>

                    <CheckBox
                        android:id="@+id/minusCheck"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="- (Вычитание)"
                        android:textColor="@color/white"/>

                    <CheckBox
                        android:id="@+id/multCheck"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="* (Умножение)"
                        android:textColor="@color/white"/>

                    <CheckBox
                        android:id="@+id/divCheck"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/ (Деление)"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Разрядность для + -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/dark_gray"
                android:padding="16dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Разрядность для +"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginBottom="8dp"/>

                    <CheckBox
                        android:id="@+id/plusDigits1Check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1-разрядные"
                        android:textColor="@color/white"/>

                    <CheckBox
                        android:id="@+id/plusDigits2Check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2-разрядные"
                        android:textColor="@color/white"/>

                    <CheckBox
                        android:id="@+id/plusDigits3Check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3-разрядные"
                        android:textColor="@color/white"/>

                    <CheckBox
                        android:id="@+id/plusDigits4Check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4-разрядные"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Разрядность для - -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/dark_gray"
                android:padding="16dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Разрядность для -"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginBottom="8dp"/>

                    <CheckBox
                        android:id="@+id/minusDigits1Check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1-разрядные"
                        android:textColor="@color/white"/>

                    <CheckBox
                        android:id="@+id/minusDigits2Check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2-разрядные"
                        android:textColor="@color/white"/>

                    <CheckBox
                        android:id="@+id/minusDigits3Check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3-разрядные"
                        android:textColor="@color/white"/>

                    <CheckBox
                        android:id="@+id/minusDigits4Check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4-разрядные"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Разрядность для * -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/dark_gray"
                android:padding="16dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Разрядность для *"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginBottom="8dp"/>

                    <CheckBox
                        android:id="@+id/multDigits1Check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1-разрядные"
                        android:textColor="@color/white"/>

                    <CheckBox
                        android:id="@+id/multDigits2Check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2-разрядные"
                        android:textColor="@color/white"/>

                    <CheckBox
                        android:id="@+id/multDigits3Check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3-разрядные"
                        android:textColor="@color/white"/>

                    <CheckBox
                        android:id="@+id/multDigits4Check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4-разрядные"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Разрядность для / -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/dark_gray"
                android:padding="16dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Разрядность для /"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginBottom="8dp"/>

                    <CheckBox
                        android:id="@+id/divDigits1Check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1-разрядные"
                        android:textColor="@color/white"/>

                    <CheckBox
                        android:id="@+id/divDigits2Check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2-разрядные"
                        android:textColor="@color/white"/>

                    <CheckBox
                        android:id="@+id/divDigits3Check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3-разрядные"
                        android:textColor="@color/white"/>

                    <CheckBox
                        android:id="@+id/divDigits4Check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4-разрядные"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Карточка для времени -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/timeCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/dark_gray"
                android:padding="16dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/timeLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Время (сек):"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginBottom="8dp"/>

                    <EditText
                        android:id="@+id/timeLimitEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="60"
                        android:textColor="@color/white"
                        android:inputType="number"
                        android:backgroundTint="@color/white"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Карточка для напоминаний -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/reminderCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/dark_gray"
                android:padding="16dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Напоминания:"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginBottom="8dp"/>

                    <CheckBox
                        android:id="@+id/reminderCheck"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Включить напоминание"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/reminderTimeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Время напоминания: 09:00"
                        android:textColor="@color/white"
                        android:clickable="true"
                        android:focusable="true"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
